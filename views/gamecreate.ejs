<% include partials/header %>

<div id="navbuttons">
  <a class="nav-button-1 btn btn-danger btn-lg" href="/game/menu">Back to the Game Menu!</a>
</div>


<div class="container">
    <div class="row">
            <div style="width: 100%; margin: 25px auto;">
                <h1 style="text-align: center;">Create a game:</h1>
                <form method="POST" action="/game/new">
                    <div class="form-group">
                        <input id="roomidinput" class="form-control" type="text" name="gameName" minlength="1" maxlength="25" placeholder="Game Name" required>
                    </div>
                    <div class="form-group">
                        <input id="roomidinput" class="form-control" type="text" name="password" placeholder="Game Password" required>
                    </div>
                    <div class="form-group">
                        <h4 class="centeredHeader">Number of Players:</h4>
                        <input id="roomidinput" class="form-control" type="number" min=1 max=6 name="players" required>
                    </div>
                    <div class="form-group">
                        <input id="roomidinput" type="submit" class="submit-button btn btn-danger btn-block">
                    </div>
                </form>
            </div>
    </div>
</div>

<% include partials/footer %>